            // See https://aka.ms/teamsfx-npm-package-task to know the details and how to customize the args.
            "label": "yarn install",
            "type": "shell",
            "command": "yarn install",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "label": "Start services",
            "dependsOn": [
                "Start video app"
            ]
        },
        {
            "label": "Start video app",
            "type": "shell",
            "command": "npm run dev:teamsfx",
            "isBackground": true,
            "options": {
                "cwd": "${workspaceFolder}"
